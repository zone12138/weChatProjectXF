/* pages/production/production.wxss */
page{
  height: 100%;
  width: 100%;
  position: relative;
}

.bg>image{
  width: 100%;
}

.production-function{
  position: absolute;
  bottom: 0;
  height: 600rpx;
  width: 100%;
  z-index: 99999;
  background-color: #fff;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  align-content: space-around;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
}

.production-function>view{
  width: 33.3%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.production-function>view>view{
  width: 50%;
  height: 100%;
}

.production-function>view>view>image{
  width: 100%;
  height: 100%;
}

.function-detail{
  color: #cccccc;
  font-size: 25rpx;
}